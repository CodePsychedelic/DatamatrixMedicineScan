<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.datamatrixMedicineScan"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <!-- android:theme="@style/AppTheme" -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.ScanningActivity"
            android:label="@string/title_activity_scanning"
            android:screenOrientation="landscape" >
        </activity>

        <activity
            android:name=".UI.ImageActivity"
            android:label="@string/title_activity_image"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".UI.SignProductDynamic"
            android:label="@string/title_activity_sign_product_dynamic" >
        </activity>
        <activity
            android:name=".UI.ProductInformationActivity"
            android:label="@string/title_activity_product_information" >
        </activity>
        <activity
            android:name=".UI.ProductsListActivity"
            android:label="@string/title_activity_products_list" >
        </activity>

        <activity
            android:name=".UI.ProductSerialList"
            android:label="@string/title_activity_product_serial_list" >
        </activity>
    </application>

</manifest>
